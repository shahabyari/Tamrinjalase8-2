<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@android:color/background_dark"
    android:orientation="vertical"
    tools:context="com.shahabyari.arpaneteniac.tamrinjalase8_2.MainActivity">

    <TextView
        android:id="@+id/txtPreview"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginTop="40sp"
        android:paddingLeft="15sp"
        android:paddingTop="10sp"
        android:text=""
        android:textColor="#969696"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txtinput"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_gravity="right"
        android:paddingRight="9sp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="#ffffff"
        android:textSize="40sp" />


    <!-- Linear asli -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        android:weightSum="4">

        <!-- Linear shomare 1 -->
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="-5sp"
                android:layout_marginTop="20sp"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/btnc"
                    android:layout_width="0sp"
                    android:layout_height="70sp"
                    android:layout_marginBottom="8sp"
                    android:layout_marginLeft="2sp"
                    android:layout_marginRight="-3sp"
                    android:layout_marginTop="8sp"
                    android:layout_weight="1"
                    android:background="@drawable/button1"
                    android:text="C"
                    android:textColor="@color/Colortextbutton"
                    android:textSize="30sp"

                    />

                <Button
                    android:id="@+id/btnce"
                    android:layout_width="0sp"
                    android:layout_height="70sp"
                    android:layout_marginBottom="8sp"
                    android:layout_marginLeft="4sp"
                    android:layout_marginRight="8sp"
                    android:layout_marginTop="8sp"
                    android:layout_weight="1"
                    android:background="@drawable/button1"
                    android:text="CE"
                    android:textColor="@color/Colortextbutton"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btntaghsim"
                    android:layout_width="0sp"
                    android:layout_height="70sp"
                    android:layout_marginBottom="8sp"
                    android:layout_marginLeft="-7sp"
                    android:layout_marginRight="6sp"
                    android:layout_marginTop="8sp"
                    android:layout_weight="1"
                    android:background="@drawable/button1"
                    android:text="/"
                    android:textColor="@color/Colortextbutton"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="-5sp"
                android:layout_marginTop="-10sp"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="0sp"
                    android:layout_height="70sp"
                    android:layout_marginBottom="0sp"
                    android:layout_marginLeft="2sp"
                    android:layout_marginRight="-3sp"
                    android:layout_marginTop="3sp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonpress"
                    android:text="7"
                    android:textColor="@color/Colortextbutton"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="0sp"
                    android:layout_height="70sp"
                    android:layout_marginBottom="8sp"
                    android:layout_marginLeft="4sp"
                    android:layout_marginRight="8sp"

                    android:layout_marginTop="3sp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonpress"
                    android:text="8"
                    android:textColor="@color/Colortextbutton"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="0sp"
                    android:layout_height="70sp"
                    android:layout_marginBottom="8sp"
                    android:layout_marginLeft="-7sp"
                    android:layout_marginRight="6sp"
                    android:layout_marginTop="3sp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonpress"
                    android:text="9"
                    android:textColor="@color/Colortextbutton"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="-5sp"
                android:layout_marginTop="-10sp"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="0sp"
                    android:layout_height="70sp"
                    android:layout_marginLeft="2sp"
                    android:layout_marginRight="6sp"
                    android:layout_marginTop="3sp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonpress"
                    android:text="4"
                    android:textColor="@color/Colortextbutton"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="0sp"
                    android:layout_height="70sp"
                    android:layout_marginLeft="-5sp"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="3sp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonpress"
                    android:text="5"
                    android:textColor="@color/Colortextbutton"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="0sp"
                    android:layout_height="70sp"
                    android:layout_marginLeft="0sp"
                    android:layout_marginRight="6sp"
                    android:layout_marginTop="3sp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonpress"
                    android:text="6"
                    android:textColor="@color/Colortextbutton"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="-5sp"
                android:layout_marginTop="-10sp"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="0sp"
                    android:layout_height="70sp"
                    android:layout_marginLeft="2sp"
                    android:layout_marginRight="8sp"
                    android:layout_marginTop="11sp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonpress"
                    android:text="1"
                    android:textColor="@color/Colortextbutton"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="0sp"
                    android:layout_height="70sp"
                    android:layout_marginLeft="-7sp"

                    android:layout_marginTop="11sp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonpress"
                    android:text="2"
                    android:textColor="@color/Colortextbutton"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btn3"

                    android:layout_width="0sp"
                    android:layout_height="70sp"
                    android:layout_marginLeft="2sp"
                    android:layout_marginRight="6sp"
                    android:layout_marginTop="11sp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonpress"
                    android:text="3"
                    android:textColor="@color/Colortextbutton"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="-5sp"
                android:layout_marginTop="-2sp"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/btn0"
                    android:layout_width="0sp"
                    android:layout_height="60sp"
                    android:layout_marginLeft="2sp"
                    android:layout_marginRight="2sp"
                    android:layout_marginTop="3sp"
                    android:layout_weight="2"
                    android:background="@drawable/buttonpress"
                    android:text="0"
                    android:textColor="@color/Colortextbutton"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btnkama"
                    android:layout_width="0sp"
                    android:layout_height="60sp"
                    android:layout_marginRight="6sp"
                    android:layout_marginTop="3sp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonpress"
                    android:text=","
                    android:textColor="@color/Colortextbutton"

                    android:textSize="30sp" />


            </LinearLayout>

        </LinearLayout>


        <!-- Linear shomare 2 -->
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_marginTop="20sp"
            android:layout_weight="1"

            android:orientation="vertical">


            <Button
                android:id="@+id/btnzarb"
                android:layout_width="95sp"
                android:layout_height="70sp"
                android:layout_marginTop="8sp"
                android:background="@drawable/button1"
                android:text="*"
                android:textColor="@color/Colortextbutton"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btntafrigh"
                android:layout_width="95sp"
                android:layout_height="70sp"

                android:layout_marginBottom="8sp"
                android:layout_marginRight="8sp"
                android:layout_marginTop="2sp"
                android:background="@drawable/button1"
                android:text="-"
                android:textColor="@color/Colortextbutton"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnjam"
                android:layout_width="100sp"
                android:layout_height="70sp"
                android:layout_marginLeft="-7sp"
                android:layout_marginRight="8sp"
                android:layout_marginTop="-7sp"
                android:background="@drawable/button1"
                android:text="+"
                android:textColor="@color/Colortextbutton"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnmosavi"
                android:layout_width="100sp"

                android:layout_height="150sp"
                android:layout_marginLeft="-7sp"
                android:layout_marginRight="8sp"

                android:layout_marginTop="2sp"
                android:background="@drawable/button1"
                android:text="="
                android:textColor="@color/Colortextbutton"

                android:textSize="30sp" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
